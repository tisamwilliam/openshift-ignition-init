
# Bastion
###########################################
dns_bastion_group:
  children:
    bastion_group: 
    dns_api_group:
  vars:
    bastion_node: 10.250.75.139
    ansible_user: root

bastion_group:
  hosts:
    bastion: 
      ansible_host: "{{ bastion_node }}"

dns_api_group:
  hosts: 
    api:
      ansible_host: "{{ bastion_node }}"
    api-int:
      ansible_host: "{{ bastion_node }}"


# Bootstrap
###########################################
dns_bootstrap_group:
  children:
    bootstrap_group:
  vars:
    bootstrap_node: 10.250.133.47

bootstrap_group:
  hosts:
    bootstrap:
      ansible_host: "{{ bootstrap_node }}"

# Master
###########################################
dns_master_group:
  children:
    master_group:
    dns_etcd_group:
  vars:
    master_node0: 10.250.133.41
    master_node1: 10.250.133.42
    master_node2: 10.250.133.43

master_group:
  hosts:
    master0:
      ansible_host: "{{ master_node0 }}"
    master1:
      ansible_host: "{{ master_node1 }}"
    master2:
      ansible_host: "{{ master_node2 }}"

dns_etcd_group:
  hosts: 
    etcd-0:
      ansible_host: "{{ master_node0 }}"
    etcd-1:
      ansible_host: "{{ master_node1 }}"
    etcd-2:
      ansible_host: "{{ master_node2 }}"


